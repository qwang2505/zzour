<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="6dp"
	android:orientation="vertical">
	
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    
        <TextView android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2013-09-13 09:08:07"
            android:textColor="#6b6666">
            
        </TextView>
        
        <TextView android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f48e4d"
            android:background="#efecea"
            android:text="待收货"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            ></TextView>
        
    </RelativeLayout>
    
   	<RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">
        
   	    <TextView
   	        android:id="@+id/shop_name"
   	        android:layout_width="130dp"
   	        android:layout_height="wrap_content"
   	        android:singleLine="true"
   	        android:textStyle="bold"
   	        android:paddingLeft="10dp"
   	        android:text="这是一个名字比较长的商家" >
   	        
   	    </TextView>
   	    
   	    <TextView android:id="@+id/price_desc"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:paddingLeft="10dp"
   	        android:layout_toRightOf="@id/shop_name"
   	        android:text="总价：￥" >
   	        
   	    </TextView>
   	    
   	    <TextView android:id="@+id/price"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:textColor="#fd0000"
   	        android:layout_toRightOf="@id/price_desc"
   	        android:text="30.0">
   	        
   	    </TextView>
   	    
   	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:paddingRight="6dp"
	        android:layout_centerVertical="true"
	        android:contentDescription="@string/arrow_desc_text"
	        android:src="@drawable/arrow" />
        
    </RelativeLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal">
        <TextView android:id="@+id/status_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:text="订单状态：商家已确认订单，将及时为您配送，请耐心等待。"/>
        
    </LinearLayout>

</LinearLayout>