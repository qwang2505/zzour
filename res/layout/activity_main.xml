<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:focusable="true"
	              android:focusableInTouchMode="true"
	              android:orientation="horizontal">
	              
	        <Spinner android:id="@+id/search_category"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:drawSelectorOnTop="true">
	        </Spinner>
	        
		    <EditText android:id="@+id/search"
		        android:layout_width="match_parent" android:layout_height="wrap_content"
		        android:text="@string/search_initial_text"
		        android:layout_weight="100"
		        android:freezesText="true">
		    </EditText>
		    
		    <ImageButton android:id="@+id/search_button"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:src="@drawable/ic_search_category_default" />
		    
	</LinearLayout>
	
	<com.zzour.android.views.HorizontalImageScrollView android:id="@+id/image_scroll"
		    android:layout_width="match_parent" android:layout_height="wrap_content"
		    android:scrollbars="none">
	</com.zzour.android.views.HorizontalImageScrollView>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:focusable="true"
	              android:focusableInTouchMode="true"
	              android:orientation="horizontal">
	    <ListView android:id="@+id/list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        />
	</LinearLayout>

</LinearLayout>