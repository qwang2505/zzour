<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<RelativeLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:orientation="horizontal">
	    <TextView android:id="@+id/food_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000"
	        android:maxWidth="180dp"
	        android:ellipsize="marquee"
	        android:singleLine="true"
	        android:text="这是一个名字挺长的食品，不知道能不能显示完全" />
	    <TextView android:id="@+id/food_price"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:textColor="#000000"
	        android:layout_marginRight="5dp"
	        android:textStyle="bold"
	        android:text="￥18.0" />
	    <TextView android:id="@+id/food_count"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/food_price"
	        android:textColor="#000000"
	        android:layout_marginRight="15dp"
	        android:textStyle="bold"
	        android:text="200份" />
	</RelativeLayout>
	<ImageView android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:contentDescription="@string/dot_line_desc"
    	android:src="@drawable/seperator" />
</LinearLayout>